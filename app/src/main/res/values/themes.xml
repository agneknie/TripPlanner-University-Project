<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Com4510TripPlanner" parent="Theme.AppCompat">
        <!-- Primary Brand Color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/main_colour</item>
        <item name="colorAccent">@color/white</item>
        <!-- Navigation & Status Bars -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- Other General Customizations. -->
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColorPrimary">@color/main_light_blue</item>
    </style>

    <style name="side_menu_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="input_field_style">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/main_colour</item>
    </style>

    <style name="switch_button_style">
        <item name="colorControlActivated">@color/main_colour</item>
    </style>
</resources>